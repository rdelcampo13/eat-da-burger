<div class="container">
  <img src="./assets/img/hamburger.png" class="burger-img">
  <h1 class="text-center">Eat-Da-Burger!</h1>
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
          <li>
          	{{name}}

          	<button class="change-devour btn btn-default" data-id="{{id}}" data-newdevour="true">
          		Devour It!
          	</button>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#if devoured}}
          <li>
          	{{name}}
          </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="text-center">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <input type="text" id="burger" name="name" placeholder="Burger Name">
      </div>

      <button type="submit" class="btn btn-default">Add Burger</button>
    </form>
  </div>
</div>